<div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
    </a>

    <div id="menu">
        <div class="pure-menu pure-menu-open">

            <form class="pure-form">
                <fieldset>
                    <input type="text" name="new_url" placeholder="Add something..." required>
                    <button type="submit" class="pure-button button-sidebar">+</button>
                </fieldset>
                <fieldset class="search-more">
                    <input type="text" name="collection" class="collection-input" placeholder="Add to a collection...">
                </fieldset>
            </form>

            <hr>

            <form class="pure-form">
                <fieldset>
                    <input type="text" name="search_string" placeholder="Find something..." required>
                    <button type="submit" class="pure-button button-sidebar">S</button>
                </fieldset>
                <fieldset class="search-more">
                    <input type="text" name="collection" class="collection-input" placeholder="In a collection...">
                </fieldset>
            </form>

            <h4>COLLECTIONS</h4>

            <ul>
              <% all_user_collections.each do |collection| %>
                <li><a href="#"><%= collection %></a></li>
              <% end %>
            </ul>
        </div>
    </div>

    <div id="main">

        <div class="content">
            <h1><%= @user.username %> / <small><a href="/users/<%= @user.id%>/edit">password protect</a></small></h1>

            <div class="pure-g">
            <% @user.bookmarks.each do |bookmark| %>
              <div class="pure-u-1-3">
                <div class="bookmark">
                    <h3><a href="<%= bookmark.url %>" title="<%= bookmark.url%>" target="_blank"><%= bookmark.url%></a></h3>
                    <% users_bookmark = BookmarksUser.where(user_id: @user.id).where(bookmark_id: bookmark.id).first %>
                      <p>Collections: 
                    <% users_bookmark.collections.each do |collection| %>
                      <%= collection.name%>
                    <% end %>
                    </p>
                </div>
              </div>
            <% end %>

            </div>
        </div>
    </div>
</div>
